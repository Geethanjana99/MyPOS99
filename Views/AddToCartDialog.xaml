<Window x:Class="MyPOS99.Views.AddToCartDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Add to Cart" 
        SizeToContent="WidthAndHeight"
        MinWidth="500"
        MaxWidth="600"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Border Background="White" CornerRadius="12" Padding="30">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.2" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Add to Cart" FontSize="24" FontWeight="Bold" Foreground="#2C3E50"/>
                <TextBlock Text="Enter quantity and discount (optional)" FontSize="13" Foreground="#7F8C8D" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Product Info and Form -->
            <StackPanel Grid.Row="1">
                <!-- Product Details -->
                <Border Background="#F8F9FA" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock x:Name="ProductNameText" FontSize="16" FontWeight="SemiBold" Foreground="#2C3E50"/>
                        <TextBlock x:Name="ProductCodeText" FontSize="12" Foreground="#7F8C8D" Margin="0,3,0,0"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="Price: " FontSize="14" Foreground="#7F8C8D"/>
                            <TextBlock x:Name="ProductPriceText" FontSize="16" FontWeight="Bold" Foreground="#27AE60"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                            <TextBlock Text="Available Stock: " FontSize="12" Foreground="#7F8C8D"/>
                            <TextBlock x:Name="ProductStockText" FontSize="12" FontWeight="SemiBold" Foreground="#E67E22"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Quantity -->
                <TextBlock Text="Quantity *" FontSize="14" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,8"/>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Content="-" Click="DecreaseQuantity_Click" 
                            Background="#E74C3C" Foreground="White" 
                            Width="50" Height="50" FontSize="24" FontWeight="Bold"
                            BorderThickness="0" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C0392B"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <TextBox x:Name="QuantityTextBox" Grid.Column="1" 
                             Text="1" FontSize="24" FontWeight="Bold" 
                             TextAlignment="Center" VerticalContentAlignment="Center"
                             Height="50" Margin="10,0" 
                             BorderBrush="#BDC3C7" BorderThickness="2"
                             KeyDown="QuantityTextBox_KeyDown"/>

                    <Button Content="+" Click="IncreaseQuantity_Click" Grid.Column="2"
                            Background="#27AE60" Foreground="White" 
                            Width="50" Height="50" FontSize="24" FontWeight="Bold"
                            BorderThickness="0" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#229954"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <!-- Discount (Optional) -->
                <TextBlock Text="Discount per item (Optional)" FontSize="14" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,8"/>
                <TextBox x:Name="DiscountTextBox" Text="0" FontSize="16" Padding="12" BorderBrush="#BDC3C7" BorderThickness="1"
                         KeyDown="DiscountTextBox_KeyDown"/>
            </StackPanel>

            <!-- Buttons -->
            <Grid Grid.Row="2" Margin="0,30,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="Cancel" Click="CancelButton_Click" 
                        Background="#95A5A6" Foreground="White" 
                        FontSize="16" FontWeight="SemiBold" Height="50"
                        BorderThickness="0" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#7F8C8D"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Grid.Column="2" Content="Add to Cart" Click="AddButton_Click" 
                        Background="#3498DB" Foreground="White" 
                        FontSize="16" FontWeight="SemiBold" Height="50"
                        BorderThickness="0" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2980B9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>
