<Window x:Class="MyPOS99.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyPOS99.Views"
        mc:Ignorable="d"
        Title="MyPOS99 - Login" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#34495E"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#95A5A6"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Background" Value="#ECF0F1"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#3498DB"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern PasswordBox Style -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Background" Value="#ECF0F1"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#3498DB"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="15">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.3" Color="#2C3E50"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Side - Branding -->
            <Border Grid.Column="0" CornerRadius="15,0,0,15">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#ECF0F1" Offset="0"/>
                        <GradientStop Color="#BDC3C7" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="40">
                        <!-- Logo -->
                        <Image Source="/Logo.png" 
                               Width="150" 
                               Height="150" 
                               Margin="0,0,0,30"
                               Stretch="Uniform"
                               RenderOptions.BitmapScalingMode="HighQuality"/>

                        <!-- Branding Text -->
                        <TextBlock Text="MyPOS99" 
                                   FontSize="42" 
                                   FontWeight="Bold" 
                                   Foreground="#2C3E50"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Point of Sale System" 
                                   FontSize="18" 
                                   Foreground="#34495E"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,40"/>

                        <Border Background="White" 
                                CornerRadius="8" 
                                Padding="20,15"
                                Margin="0,20,0,0"
                                BorderBrush="#3498DB"
                                BorderThickness="2">
                            <StackPanel>
                                <TextBlock Text="✓ Fast &amp; Secure" 
                                           Foreground="#2C3E50" 
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,8"/>
                                <TextBlock Text="✓ Inventory Management" 
                                           Foreground="#2C3E50" 
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,8"/>
                                <TextBlock Text="✓ Sales Analytics" 
                                           Foreground="#2C3E50" 
                                           FontSize="14"
                                           FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Right Side - Login Form -->
            <Grid Grid.Column="1" Margin="50,40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Close Button -->
                <Button Grid.Row="0"
                        Content="✕"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Width="35"
                        Height="35"
                        FontSize="20"
                        Background="Transparent"
                        Foreground="#7F8C8D"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="17.5">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#ECF0F1"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Login Form -->
                <StackPanel Grid.Row="1" VerticalAlignment="Center">
                    <!-- Welcome Text -->
                    <TextBlock Text="Welcome Back!" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Sign in to continue" 
                               FontSize="14" 
                               Foreground="#7F8C8D"
                               Margin="0,0,0,40"/>

                    <!-- Username -->
                    <TextBlock Text="Username" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="#2C3E50"
                               Margin="0,0,0,8"/>

                    <TextBox x:Name="UsernameTextBox"
                             Style="{StaticResource ModernTextBox}"
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,20"/>

                    <!-- Password -->
                    <TextBlock Text="Password" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="#2C3E50"
                               Margin="0,0,0,8"/>

                    <PasswordBox x:Name="PasswordBox"
                                 Style="{StaticResource ModernPasswordBox}"
                                 PasswordChanged="PasswordBox_PasswordChanged"
                                 Margin="0,0,0,10"/>

                    <!-- Error Message -->
                    <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="#E74C3C"
                               FontSize="13"
                               TextWrapping="Wrap"
                               Margin="0,0,0,10"
                               Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                    <!-- Remember Me -->
                    <CheckBox Content="Remember me" 
                              Foreground="#7F8C8D"
                              Margin="0,0,0,30"
                              IsEnabled="False"/>

                    <!-- Login Button -->
                    <Button Content="Sign In"
                            Style="{StaticResource ModernButton}"
                            Command="{Binding LoginCommand}"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"
                            Margin="0,0,0,15"/>

                    <!-- Loading Indicator -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="Signing in..." 
                                   FontSize="13"
                                   Foreground="#7F8C8D"/>
                    </StackPanel>
                </StackPanel>

                <!-- Footer -->
                <StackPanel Grid.Row="2" VerticalAlignment="Bottom">
                    <Separator Margin="0,0,0,15"/>
                    <TextBlock Text="Default Credentials:" 
                               FontSize="11" 
                               Foreground="#95A5A6"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    <TextBlock FontSize="11" 
                               Foreground="#7F8C8D"
                               HorizontalAlignment="Center">
                        <Run Text="Username:"/>
                        <Run Text="admin" FontWeight="SemiBold"/>
                        <Run Text="Password:"/>
                        <Run Text="admin123" FontWeight="SemiBold"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
