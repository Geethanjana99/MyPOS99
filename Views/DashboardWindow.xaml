<Window x:Class="MyPOS99.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyPOS99.Views"
        mc:Ignorable="d"
        Title="MyPOS99 - Dashboard" 
        Height="700" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Grid Background="#ECF0F1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="MyPOS99" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="0,0,30,0"/>
                    <TextBlock Text="|" 
                               FontSize="24" 
                               Foreground="#7F8C8D"
                               VerticalAlignment="Center"
                               Margin="0,0,30,0"/>
                    <TextBlock Text="Dashboard" 
                               FontSize="20" 
                               Foreground="#ECF0F1"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Border Background="#34495E" 
                            CornerRadius="6" 
                            Padding="15,8"
                            Margin="0,0,15,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="👤" 
                                       FontSize="16"
                                       Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding UserName}" 
                                       Foreground="White"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                            <TextBlock Text="|" 
                                       Foreground="#7F8C8D"
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding UserRole}" 
                                       Foreground="#3498DB"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Button Content="Logout"
                            Command="{Binding LogoutCommand}"
                            Background="#E74C3C"
                            Foreground="White"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Padding="20,8"
                            Cursor="Hand"
                            BorderThickness="0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="6"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C0392B"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Stats Cards -->
            <Grid Grid.Row="0" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Today's Sales Card -->
                <Border Grid.Column="0" 
                        Background="White" 
                        CornerRadius="10" 
                        Margin="0,0,15,0"
                        Padding="25">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.1" Color="Black"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="📊" FontSize="32" Margin="0,0,0,10"/>
                        <TextBlock Text="Today's Sales" 
                                   FontSize="14" 
                                   Foreground="#7F8C8D"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding TodaysSalesTotalFormatted}" 
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   Foreground="#27AE60"/>
                    </StackPanel>
                </Border>

                <!-- Products Card -->
                <Border Grid.Column="1" 
                        Background="White" 
                        CornerRadius="10" 
                        Margin="0,0,15,0"
                        Padding="25">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.1" Color="Black"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="📦" FontSize="32" Margin="0,0,0,10"/>
                        <TextBlock Text="Total Products" 
                                   FontSize="14" 
                                   Foreground="#7F8C8D"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding TotalProducts}" 
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   Foreground="#2C3E50"/>
                    </StackPanel>
                </Border>

                <!-- Customers Card -->
                <Border Grid.Column="2" 
                        Background="White" 
                        CornerRadius="10" 
                        Margin="0,0,15,0"
                        Padding="25">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.1" Color="Black"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="👥" FontSize="32" Margin="0,0,0,10"/>
                        <TextBlock Text="Total Customers" 
                                   FontSize="14" 
                                   Foreground="#7F8C8D"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding TotalCustomers}" 
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   Foreground="#2C3E50"/>
                    </StackPanel>
                </Border>

                <!-- Low Stock Card -->
                <Border Grid.Column="3" 
                        Background="White" 
                        CornerRadius="10"
                        Padding="25">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.1" Color="Black"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="⚠️" FontSize="32" Margin="0,0,0,10"/>
                        <TextBlock Text="Low Stock Items" 
                                   FontSize="14" 
                                   Foreground="#7F8C8D"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding LowStockItemsCount}" 
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   Foreground="#E74C3C"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Quick Actions -->
            <Border Grid.Row="1" 
                    Background="White" 
                    CornerRadius="10"
                    Padding="30">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.1" Color="Black"/>
                </Border.Effect>
                <Grid>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="🚀" 
                                   FontSize="64" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20"/>
                        <TextBlock Text="Welcome to MyPOS99!" 
                                   FontSize="32" 
                                   FontWeight="Bold"
                                   Foreground="#2C3E50"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="Your point of sale system is ready to use" 
                                   FontSize="16" 
                                   Foreground="#7F8C8D"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,40"/>

                        <UniformGrid Rows="2" Columns="3" Width="600">
                            <Button Content="🛒 New Sale" 
                                    Margin="10"
                                    Padding="20"
                                    FontSize="16"
                                    Background="#3498DB"
                                    Foreground="White"
                                    Command="{Binding NewSaleCommand}"
                                    Cursor="Hand"/>
                            <Button Content="📦 Products" 
                                    Margin="10"
                                    Padding="20"
                                    FontSize="16"
                                    Background="#2ECC71"
                                    Foreground="White"
                                    Command="{Binding ProductsCommand}"
                                    Cursor="Hand"/>
                            <Button Content="👥 Customers" 
                                    Margin="10"
                                    Padding="20"
                                    FontSize="16"
                                    Background="#9B59B6"
                                    Foreground="White"
                                    Command="{Binding CustomersCommand}"
                                    Cursor="Hand"/>
                            <Button Content="🏢 Suppliers" 
                                    Margin="10"
                                    Padding="20"
                                    FontSize="16"
                                    Background="#E67E22"
                                    Foreground="White"
                                    Command="{Binding SuppliersCommand}"
                                    Cursor="Hand"/>
                            <Button Content="💰 Expenses" 
                                    Margin="10"
                                    Padding="20"
                                    FontSize="16"
                                    Background="#E74C3C"
                                    Foreground="White"
                                    Command="{Binding ExpensesCommand}"
                                    Cursor="Hand"/>
                            <Button Content="📊 Reports" 
                                    Margin="10"
                                    Padding="20"
                                    FontSize="16"
                                    Background="#1ABC9C"
                                    Foreground="White"
                                    Command="{Binding ReportsCommand}"
                                    Cursor="Hand"/>
                        </UniformGrid>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#34495E" Padding="15">
            <Grid>
                <TextBlock Text="MyPOS99 v1.0 | Point of Sale System" 
                           Foreground="#ECF0F1" 
                           FontSize="12"
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Source={x:Static System:DateTime.Now}, StringFormat='dd/MM/yyyy hh:mm tt'}" 
                           xmlns:System="clr-namespace:System;assembly=mscorlib"
                           Foreground="#BDC3C7" 
                           FontSize="12"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
