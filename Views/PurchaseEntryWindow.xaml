<Window x:Class="MyPOS99.Views.PurchaseEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Purchase Entry" 
        Height="900" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F5F6FA">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,20">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Logo.png" 
                           Width="45" 
                           Height="45" 
                           Margin="0,0,15,0"
                           VerticalAlignment="Center"
                           Stretch="Uniform"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                    <StackPanel>
                        <TextBlock Text="Purchase Entry" FontSize="28" FontWeight="Bold" Foreground="#2C3E50"/>
                        <TextBlock Text="Record purchases and update stock automatically" FontSize="14" Foreground="#7F8C8D"/>
                    </StackPanel>
                </StackPanel>

                <Button Content="Close" Click="CloseButton_Click" HorizontalAlignment="Right"
                        Background="#95A5A6" Foreground="White" Padding="20,10" BorderThickness="0" Cursor="Hand"/>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left - Product Search & Cart -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="400"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Product Search -->
                    <Border Grid.Row="0" Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Search Products" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,10"/>
                            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" FontSize="14" Padding="12"/>
                            <ListBox ItemsSource="{Binding SearchResults}" SelectedItem="{Binding SelectedProduct}" MaxHeight="150" Margin="0,10,0,0">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Cursor="Hand">
                                            <TextBlock Text="{Binding Code}" FontWeight="Bold" Width="100"/>
                                            <TextBlock Text="{Binding Name}" Width="200"/>
                                            <TextBlock Text="{Binding CostPrice, StringFormat='Rs. {0:N2}'}" Foreground="#E67E22"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <Button Content="➕ Add to Cart" Command="{Binding AddToCartCommand}" Margin="0,10,0,0" Padding="15,10" Background="#27AE60" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                        </StackPanel>
                    </Border>

                    <!-- Purchase Cart -->
                    <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Purchase Items" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,10"/>
                            <DataGrid Grid.Row="1" ItemsSource="{Binding CartItems}" SelectedItem="{Binding SelectedCartItem}" AutoGenerateColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Code" Binding="{Binding ProductCode}" Width="100"/>
                                    <DataGridTextColumn Header="Product" Binding="{Binding ProductName}" Width="*"/>
                                    <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="70"/>
                                    <DataGridTextColumn Header="Cost Price" Binding="{Binding CostPrice, StringFormat=Rs. {0:N2}}" Width="100"/>
                                    <DataGridTextColumn Header="Total" Binding="{Binding TotalFormatted}" Width="100"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>

                    <!-- Totals -->
                    <Border Grid.Row="2" Background="#E8F5E9" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <Grid Margin="0,0,0,5">
                                <TextBlock Text="Subtotal:" FontSize="14"/>
                                <TextBlock Text="{Binding SubTotalFormatted}" FontSize="14" FontWeight="Bold" HorizontalAlignment="Right"/>
                            </Grid>
                            <Grid Margin="0,0,0,5">
                                <TextBlock Text="Tax:" FontSize="14"/>
                                <TextBlock Text="{Binding TaxFormatted}" FontSize="14" FontWeight="Bold" HorizontalAlignment="Right"/>
                            </Grid>
                            <Grid>
                                <TextBlock Text="Total:" FontSize="18" FontWeight="Bold" Foreground="#27AE60"/>
                                <TextBlock Text="{Binding TotalFormatted}" FontSize="20" FontWeight="Bold" Foreground="#27AE60" HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Purchase History -->
                    <Border Grid.Row="3" Background="White" CornerRadius="12" Padding="20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Recent Purchases" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,10"/>
                            <DataGrid Grid.Row="1" ItemsSource="{Binding PurchaseHistory}" AutoGenerateColumns="False" IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Number" Binding="{Binding PurchaseNumber}" Width="140"/>
                                    <DataGridTextColumn Header="Supplier" Binding="{Binding Supplier.Name}" Width="*"/>
                                    <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=dd/MM/yyyy}" Width="100"/>
                                    <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=Rs. {0:N2}}" Width="100"/>
                                    <DataGridTextColumn Header="Status" Binding="{Binding PaymentStatus}" Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Right - Purchase Details -->
                <Border Grid.Column="2" Background="White" CornerRadius="12" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Purchase Details" FontSize="20" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,20"/>

                        <TextBlock Text="Purchase Number" FontSize="13" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding PurchaseNumber}" FontSize="14" Padding="12" Margin="0,0,0,15" IsReadOnly="True" Background="#ECF0F1"/>

                        <TextBlock Text="Supplier *" FontSize="13" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding Suppliers}" SelectedItem="{Binding SelectedSupplier}" DisplayMemberPath="Name" FontSize="14" Padding="12" Margin="0,0,0,15"/>

                        <TextBlock Text="Date" FontSize="13" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                        <DatePicker SelectedDate="{Binding PurchaseDate}" FontSize="14" Padding="12" Margin="0,0,0,15"/>

                        <TextBlock Text="Tax Amount" FontSize="13" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Tax, UpdateSourceTrigger=PropertyChanged}" FontSize="14" Padding="12" Margin="0,0,0,15"/>

                        <TextBlock Text="Amount Paid" FontSize="13" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding AmountPaid, UpdateSourceTrigger=PropertyChanged}" FontSize="14" Padding="12" Margin="0,0,0,15"/>

                        <TextBlock Text="Payment Status" FontSize="13" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding PaymentStatuses}" SelectedItem="{Binding PaymentStatus}" FontSize="14" Padding="12" Margin="0,0,0,15"/>

                        <TextBlock Text="Notes" FontSize="13" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}" FontSize="12" Padding="10" Height="60" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,20"/>

                        <Button Content="💾 Save Purchase" Command="{Binding SavePurchaseCommand}" Height="50" FontSize="16" Background="#27AE60" Foreground="White" BorderThickness="0" Cursor="Hand" Margin="0,0,0,10"/>
                        <Button Content="🔄 New Purchase" Command="{Binding NewPurchaseCommand}" Height="45" FontSize="14" Background="#3498DB" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
